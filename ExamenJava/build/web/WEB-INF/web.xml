<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>loguear</servlet-name>
        <servlet-class>servlets.loguear</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>borrar</servlet-name>
        <servlet-class>servlets.borrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editar</servlet-name>
        <servlet-class>servlets.editar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>verParaEditar</servlet-name>
        <servlet-class>servlets.verParaEditar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>insertar</servlet-name>
        <servlet-class>servlets.insertar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loguear</servlet-name>
        <url-pattern>/loguear</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>borrar</servlet-name>
        <url-pattern>/borrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editar</servlet-name>
        <url-pattern>/editar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verParaEditar</servlet-name>
        <url-pattern>/verParaEditar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>insertar</servlet-name>
        <url-pattern>/insertar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
