<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>insertarUsuario</servlet-name>
        <servlet-class>servlets.insertarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loguear</servlet-name>
        <servlet-class>servlets.loguear</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>insertarMensaje</servlet-name>
        <servlet-class>servlets.insertarMensaje</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>borrarMensaje</servlet-name>
        <servlet-class>servlets.borrarMensaje</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>insertarImagen</servlet-name>
        <servlet-class>servlets.insertarImagen</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>insertarUsuario</servlet-name>
        <url-pattern>/insertarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loguear</servlet-name>
        <url-pattern>/loguear</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>insertarMensaje</servlet-name>
        <url-pattern>/insertarMensaje</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>borrarMensaje</servlet-name>
        <url-pattern>/borrarMensaje</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>insertarImagen</servlet-name>
        <url-pattern>/insertarImagen</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
